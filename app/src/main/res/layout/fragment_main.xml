<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb6c1"
    tools:context="io.github.moganbo.pantvoicemaker.fragment.MainFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/fragment_main_result_text_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/fragment_main_main_text_view"
                android:layout_width="match_parent"
                android:layout_height="240px"
                android:layout_marginHorizontal="24px"
                android:layout_marginTop="32px"
                android:background="#f5deb3"
                android:gravity="center"
                android:text="Test\nTest\nTest"
                android:textColor="#000000"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/fragment_main_copy_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24px"
                android:gravity="center"
                android:text="※タップでコピーできます"
                android:textColor="#708090"
                android:textSize="12sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_main_config_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_main_result_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">
        <Button
            android:id="@+id/fragment_main_result_button"
            android:layout_width="match_parent"
            android:layout_height="200px"
            android:layout_marginHorizontal="24px"
            android:layout_marginVertical="24px"
            android:text="結果"
            android:textSize="28sp"/>
    </LinearLayout>

</LinearLayout>
